
@{
	ViewBag.Title = "修改密码";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    function btnSave() {
        var pwd = $('#F_UserPassword').val(); 
        $.ajax({
            url: "/SystemManage/User/SubmitRevisePassword",
            type: 'post',
            data: { userPassword: pwd, keyValue: '@ViewData["id"]' },
            success: function (result) {
                if (result == '操作成功') {
                    setTimeout(function () {
                        toastr.options = {
                            closeButton: true,
                            progressBar: true,
                            showMethod: 'slideDown',
                            timeOut: 1000
                        };
                        toastr.success('操作成功！');
                        window.location.href = '/SystemManage/User/Index';
                    }, 0);
                }
            }
        });
    }
    function btnBack() {
        window.location.href = '/SystemManage/User/Index';
    }
</script>
<div class="row wrapper border-bottom white-bg page-heading" style="margin-left: -0px;">
	<div class="col-lg-10">
		<ol class="breadcrumb" style="padding:10px 0px 0px 10px;">
			<li>
				<a>系统管理</a>
			</li>
			<li class="active">
				<strong>员工管理</strong>
			</li>
		</ol>
	</div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
	<div class="row">
		<div class="col-lg-12">
			<div class="ibox float-e-margins">
				<div class="ibox-title">
					<h5>修改密码</h5>
				</div>
				<div class="ibox-content">
					<div class="panel-body">
						<form class="form-horizontal" id="createUser">
							<div class="form-group">
								<label class="col-lg-2 control-label">姓名</label>
								<div class="col-lg-6">
									<input type="text" readonly="readonly" class="form-control" placeholder="姓名" name="F_RealName" id="F_RealName" value="@ViewData["realName"]">
								</div>
							</div>
							<div class="form-group">
								<label class="col-lg-2 control-label">账户</label>
								<div class="col-lg-6">
									<input type="text" readonly="readonly" class="form-control" placeholder="账户" name="F_Account" id="F_Account" value="@ViewData["account"]">
								</div>
							</div>
							<div class="form-group">
								<label class="col-lg-2 control-label">密码</label>
								<div class="col-lg-6">
									<input type="text" class="form-control" placeholder="密码" name="F_UserPassword" id="F_UserPassword">
								</div>
							</div>
							<div class="form-group">
								<div class="col-lg-offset-2 col-lg-10">
									<button class="btn btn-danger" type="button" onclick="btnSave()">保存</button>
                                    <button class="btn btn-warning" type="button" onclick="btnBack()">返回</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

